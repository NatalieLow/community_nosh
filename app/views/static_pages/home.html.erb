<div class="center hero-unit white_text">
  <% @posts.each do |post| %>
      <!--<div id="voting">-->
        <!--<a>Fresh Nosh? <i class="glyphicon glyphicon-thumbs-up"></i>-->
        <!--<i class="glyphicon glyphicon-thumbs-down"></i></a>-->

      <!--</div>-->

      <div class="img_post">

        <a href="<%= post.url %>" target="_blank"><div class="attach-post-image"
            style="background-image:url('<%= post.img_url %>')">
        </div></a>
        <div id="post_info">
          <div id="top_post_info">
            <!--<tr>-->
              <p id="up_down_votes">Fresh Nosh?
                <a><i class="glyphicon glyphicon-thumbs-up"></i></a>
                <a><i class="glyphicon glyphicon-thumbs-down"></i></a></p>
              <a   id="rating"><i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i>
                <i class="glyphicon glyphicon-star-empty"></i></a>
            <!--</tr>-->
          </div>

          <table id="bottom_post_info">
            <tr>
              <td id="review"><a>Discussion/ Reviews</a></td>
              <td id="post_title"><%= post.title.titlecase %>
                <br/>from <%= post.blog_name.downcase %></td>
              <td id="save"><a><i class="glyphicon glyphicon-plus"></i> Recipe Box</a></td>
            </tr>
          </table>
        </div>

      </div>
  <% end %>

</div>
<%= link_to image_tag("http://www.mothercoders.org/favicon.ico", alt: "Mother Coders"),
            'http://www.mothercoders.org/give/' %>


